<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="10dp">


    <LinearLayout
        android:id="@+id/ll_myrelease"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_wallet"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline35">

        <LinearLayout
            android:id="@+id/area_item_myrelease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:orientation="horizontal"
            android:padding="5dp"
            android:showDividers="end|beginning">

            <TextView
                android:id="@+id/area_msg_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车位所属区域："
                android:textColor="@color/pickerview_topbar_title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_area_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center"
                android:text=" " />
            <!--            "安徽省马鞍山市雨山区""黑龙江省齐齐哈尔市梅里斯达翰尔族区"-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/positiondetail_item_myrelease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/positiondetail_msg_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车位详细地址："
                android:textColor="@color/pickerview_topbar_title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_positiondetail_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text=" " />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/availabletime_item_myrelease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/availabletime_msg_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车位可用时间："
                android:textColor="@color/pickerview_topbar_title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_availabletime_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text=" " />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/price_item_myrelease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/price_msg_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出租价格："
                android:textColor="@color/pickerview_topbar_title"

                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_price_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text=" " />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/status_item_myrelease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/status_msg_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车位状态："
                android:textColor="@color/pickerview_topbar_title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_status_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text=" "
                android:textColor="@color/colorAccent" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_item_myrelease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:showDividers="none">

            <Button
                android:id="@+id/btn_showspacedetail_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="查看车位详情" />

            <Button
                android:id="@+id/btn_modifyprice_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="修改价格" />

            <Button
                android:id="@+id/btn_delete_item_myrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="撤销发布" />
        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />


</androidx.constraintlayout.widget.ConstraintLayout>